{
  "info": {
    "name": "Company Registration Backend API",
    "description": "Complete API collection for Company Registration & Verification Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    console.log('User registered:', response);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"John Doe\",\n  \"gender\": \"m\",\n  \"mobile_no\": \"+1234567890\",\n  \"signup_type\": \"e\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Verify Mobile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"uid\": \"firebase_uid_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-mobile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-mobile"]
            }
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-email?email=john.doe@example.com",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-email"],
              "query": [
                {
                  "key": "email",
                  "value": "john.doe@example.com"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Company",
      "item": [
        {
          "name": "Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Tech Innovations Inc\",\n  \"address\": \"123 Business Street\",\n  \"city\": \"San Francisco\",\n  \"state\": \"California\",\n  \"country\": \"USA\",\n  \"postal_code\": \"94102\",\n  \"website\": \"https://techinnovations.com\",\n  \"industry\": \"Technology\",\n  \"founded_date\": \"2020-01-15\",\n  \"description\": \"Leading technology solutions provider\",\n  \"social_links\": {\n    \"linkedin\": \"https://linkedin.com/company/techinnovations\",\n    \"twitter\": \"https://twitter.com/techinnovations\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/company/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "company", "register"]
            }
          }
        },
        {
          "name": "Get Company Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "company", "profile"]
            }
          }
        },
        {
          "name": "Update Company Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Tech Innovations International\",\n  \"description\": \"Global technology solutions provider\",\n  \"website\": \"https://techinnovations-global.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "company", "profile"]
            }
          }
        },
        {
          "name": "Upload Logo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/company/upload-logo",
              "host": ["{{baseUrl}}"],
              "path": ["api", "company", "upload-logo"]
            }
          }
        },
        {
          "name": "Upload Banner",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/company/upload-banner",
              "host": ["{{baseUrl}}"],
              "path": ["api", "company", "upload-banner"]
            }
          }
        }
      ]
    }
  ]
}
